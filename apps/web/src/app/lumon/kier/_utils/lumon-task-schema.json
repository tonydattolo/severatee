{
    "_id": "lumon-tasks-schema",
    "name": "Lumon Tasks Submissions",
    "keys": [
        "_id"
    ],
    "schema": {
        "$schema": "http://json-schema.org/draft-07/schema#",
        "title": "Lumon Task Submission",
        "type": "array",
        "items": {
            "type": "object",
            "properties": {
                "_id": {
                    "type": "string",
                    "format": "uuid",
                    "coerce": true
                },
                "taskId": {
                    "type": "string",
                    "format": "uuid"
                },
                "taskTypeId": {
                    "type": "string",
                    "format": "uuid"
                },
                "agentId": {
                    "type": "string",
                    "format": "uuid"
                },
                "agentWalletAddress": {
                    "type": "string"
                },
                "submittedAt": {
                    "type": "string",
                    "format": "date-time"
                },
                "data": {
                    "type": "object",
                    "properties": {
                        "%share": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "%share"
                    ]
                },
                "metadata": {
                    "type": "object",
                    "properties": {
                        "taskName": {
                            "type": "string"
                        },
                        "agentName": {
                            "type": "string"
                        }
                    }
                }
            },
            "required": [
                "_id",
                "taskId",
                "taskTypeId",
                "agentId",
                "submittedAt",
                "data"
            ]
        }
    }
}